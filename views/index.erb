<p>There are</p>
<p class='big' id='days' data-days='<%= @days %>'></p>
<p>days remaining until Pablo is 30</p>

<script>
$('#days').each(function() {
  var $this = $(this), countTo = $this.attr('data-days')
  $({countNum: $this.text()}).animate({
    countNum: countTo
  },
  {
    duration: 5000,
    easing:'swing',
    step: function() {
      $this.text(Math.floor(this.countNum))
      c = 'text-' + Math.floor((this.countNum / countTo) * 10)
      $this.addClass(c)
    },
    complete: function() {
      $this.text(this.countNum)
    }
  })
})
</script>
